<div class="page-header">
  <h1><%= "#{@user.first_name} #{@user.last_name}" %></h1>
  <% if current_user.id == @user.id %>
    <p><%= link_to 'Edit Profile', edit_user_path(@user) %> | <%= link_to 'Delete',  user_path(@user), method: :delete %></p>
  <% end %>
</div>
<div class="col-md-4">
  <%= image_tag"http://s3.amazonaws.com/mlouiepromatch/#{@user.first_name}.jpg", class: 'img-responsive', id: 'avatar') %>
</div>
<div class="member-info col-md-8">
  <table class="table table-striped">
    <tbody>
      <tr>
        <td><b>Name: </b><%= @user.first_name %> <%= @user.last_name %></td>
      </tr>
      <tr>
        <td><b>Gender: </b><% if @user.gender == true %>
            Male
           <% else %>
            Female
           <% end %></td>
       </tr>
       <tr>
         <td><b>Address: </b><%= @user.address %></td>
       </tr>
       </tr>
       <tr>
         <td><b>Email: </b><%= @user.email %></td>
       </tr>
       <tr>
       </tr>
       <tr>
         <td><b>About Me: </b><%= @user.bio %></td>
       </tr>
       <tr>
         <td><b>Ability: </b><%= @user.ability %></td>
       </tr>
       <% if current_user %>
         <tr>
           <td><b>Distance From You: </b><%= @distance.round(2) %> miles</td>
         </tr>
      <% end %>
    </tbody>
  </table>


</div>
