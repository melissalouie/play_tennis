
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group row">
    <div class="field">
      <%= f.label :first_name, :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.text_field :first_name, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label :last_name, :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.text_field :last_name, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label :gender, :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.select :gender, [['Male', true], ['Female', false]], {},  {class: 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label :email, :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.email_field :email, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label :address, :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.text_area :address, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label 'About Me', :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.text_field :bio, :class => 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label 'Image', :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.file_field :avatar %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label :ability_id, :class=> 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.select :ability, User::ABILITIES , {include_blank: false}, {class: 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="field">
       <%= f.label :password, :class => 'control-label col-md-2' %>
       <div class='form-controls col-md-4'>
         <%= f.password_field :password, :class => 'form-control' %>
       </div>
     </div>
   </div>
   <div class="form-group row">
     <div class="field">
       <%= f.label :password_confirmation, :class => 'control-label col-md-2' %>
       <div class='form-controls col-md-4'>
         <%= f.password_field :password_confirmation, :class => 'form-control' %>
       </div>
     </div>
   </div>
  <div class="form-group row">
    <div class="field">
      <%= f.label 'Image', :class => 'control-label col-md-2' %>
      <div class='form-controls col-md-4'>
        <%= f.file_field :avatar %>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-offset-2 col-md-4">
      <%= f.submit :class => 'btn btn-primary'%>
      <%= link_to 'cancel', root_path, class: 'btn btn-default'%>
    </div>
  </div>
<% end %>
