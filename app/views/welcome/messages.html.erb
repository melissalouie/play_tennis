<div class="col-md-3 message-form">
  <%= form_for(@message) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :text, 'Message' %>
      <%= f.text_area :text, class: 'form-control'%>
    </div>
    <%= f.submit 'Post Message' %>
  <% end %>
</div>
