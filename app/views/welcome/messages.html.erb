<div class="page-header">
  <h1>Message Board</h1>
</div>
<div class="col-md-3 message-form">
  <%= form_for(@message) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control'%>
    </div>
    <div class="form-group">
      <%= f.label :text, 'Message' %>
      <%= f.text_area :text, class: 'form-control'%>
    </div>
    <%= f.submit 'Post Message', id: 'post-message' %>
  <% end %>
</div>
<div class="messages">
  <% @messages.each do |message| %>
    <% if message.id % 4 == 0 %>
      <div class="col-md-3 blank_message"></div>
    <% else %>
      <div class="col-md-3 message">
        <p><%= message.text %></p>
        <p>Send Message: <%= mail_to message.email %></p>
      </div>
    <% end %>
  <% end %>
</div>
