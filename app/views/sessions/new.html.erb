<div class="container">
  <div class="well col-md-offset-4 col-md-4">
  <h1>Sign In</h1>
    <%= form_tag signin_path do %>
      <p>
        <%= label_tag :email %>
      </p>
      <p>
        <%= text_field_tag :email, nil, class: "form-control" %>
      </p>
      <p>
        <%= label_tag :password %>
      </p>
      <p>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </p>
      <p>
        <%= submit_tag 'Sign In', class: 'btn btn-primary' %>
      </p>
    <% end %>
  </div>

</div>
